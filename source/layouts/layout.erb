<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,400italic,300,300italic,600italic,700,700italic' rel='stylesheet' type='text/css'>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "Furatto" %></title>

    <%= favicon_tag 'images/fav.ico' %>
    <%= stylesheet_link_tag "normalize", "all" %>
  </head>

  <body>
    <nav class="navigation-bar">
      <ul class="brand-section">
        <li class="brand-name">
          <a href="/" class="menu-trigger" id="trigger">
            <strong>Furatto</strong>
          </a>
        </li>
        <li class="menu-toggle">
        <a href="#"></a>
        </li>
      </ul>

      <ul class="pull right">
        <li><a href="#">Docs</a></li>
        <li><a href="#">Issues</a></li>
        <li><a href="#">Github</a></li>
        <li><a href="#">Download</a></li>
      </ul>
    </nav>

    <div class="row">
      <div class="two columns">
        <ul class="navigation">
          <li class="header">Setup</li>
          <li><a href="#">Getting Started</a></li>
          <li><a href="#">What's included?</a></li>
          <li><a href="#">Basic Setup</a></li>
          <li><a href="#">Browser support</a></li>
          <li><a href="#">Using Rails</a></li>
          <li><a href="#">Templates</a></li>
          <li><a href="#">Old versions</a></li>
        </ul>
      </div>
      <div class="ten columns no-padding">
        <%= yield %>
      </div>
    </div>


    <%= javascript_include_tag  "all" %>
  </body>
</html>
